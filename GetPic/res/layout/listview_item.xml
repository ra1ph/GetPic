<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/map_heigth"
    android:layout_gravity="center"
    android:layout_margin="20dip" >

    <ImageView
        android:id="@+id/image_listview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/map_heigth"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/layout_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#55000000"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/map_point"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/map_point" />

        <ImageView
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/map_point"
            android:adjustViewBounds="true"
            android:src="@drawable/message" />

        <ImageView
            android:id="@+id/user_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/mark_spam"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/user_delete"
            android:adjustViewBounds="true"
            android:src="@drawable/spam" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/map_lay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/map_heigth"
        android:visibility="invisible" >

        <ImageView
        android:id="@+id/image_map"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/map_heigth"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    </RelativeLayout>

</RelativeLayout>